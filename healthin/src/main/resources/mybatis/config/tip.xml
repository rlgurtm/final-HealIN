<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tip">
	<resultMap type="tipBoardVO" id="tipBoardRM">
		<result property="memberVO.id" column="id" />
		<result property="memberVO.name" column="name" />
	</resultMap>
 	<select id="getTipBoardList" resultMap="tipBoardRM" >
 		select t.board_no as no,
 		t.title,t.hits,to_char(t.posted_date,'YYYY.MM.DD') as posted_date,
 		t.category,m.id,m.name
 		from tipandqna t,member m 
 		where t.id=m.id and t.tipqna='tip' order by t.board_no desc
 	</select>
 	<select id="getTotalTipCount" resultType="int" >
 		select count(*) from tipandqna where tipqna='tip'
 	</select>
</mapper>
